<% layout('layouts/boilerplate') %>

<h3>All Listings</h3>

<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
  <% for (let listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: inherit;">
        <div class="card h-100 shadow-sm position-relative">
          <img
            src="<%= listing.image?.url || listing.image || 'https://images.pexels.com/photos/1486974/pexels-photo-1486974.jpeg?auto=compress&cs=tinysrgb&w=600' %>"
            class="card-img-top"
            alt="listing_image" style="height: 20rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text">
              <strong>â‚¹<%= listing.price.toLocaleString("en-IN") %></strong> /night
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>
